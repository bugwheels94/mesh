{
	"name": "@lytejs/mesh",
	"version": "0.0.0-development",
	"description": "Multi Repo Manager",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"module": "dist/index.js",
	"repository": "https://github.com/bugwheels94/mesh",
	"license": "MIT",
	"keywords": [],
	"bin": {
		"mesh": "dist/index.js"
	},
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"test": "run-s build test:*",
		"build:watch": "tsc -p tsconfig.json -w",
		"prepare": "husky install"
	},
	"engines": {
		"node": ">=10"
	},
	"dependencies": {
		"@bitauth/libauth": "^1.17.1",
		"@types/archiver": "^5.3.1",
		"archiver": "^5.3.1",
		"cloneable-readable": "^2.1.0",
		"dargs": "^8.1.0",
		"extract-zip": "^2.0.1",
		"inquirer": "^8.2.0",
		"js-yaml": "^4.1.0",
		"keypress": "^0.2.1",
		"lodash.throttle": "^4.1.1",
		"minimist": "^1.2.5",
		"node-fetch": "^2.0.0",
		"pump": "^3.0.0",
		"ramda": "^0.27.1",
		"semver": "^7.3.5",
		"shelljs": "^0.8.4",
		"tree-kill": "^1.2.2"
	},
	"devDependencies": {
		"@ava/typescript": "^1.1.1",
		"@istanbuljs/nyc-config-typescript": "^1.0.1",
		"@types/inquirer": "^8.1.3",
		"@types/node": "^16.11.9",
		"@types/ramda": "^0.27.50",
		"@types/shelljs": "^0.8.9",
		"@typescript-eslint/eslint-plugin": "^4.0.1",
		"@typescript-eslint/parser": "^4.0.1",
		"ava": "^3.12.1",
		"codecov": "^3.5.0",
		"cspell": "^4.1.0",
		"eslint": "^7.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.22.0",
		"gh-pages": "^3.1.0",
		"husky": "^7.0.4",
		"npm-run-all": "^4.1.5",
		"nyc": "^15.1.0",
		"open-cli": "^6.0.1",
		"semantic-release": "^19.0.2",
		"standard-version": "^9.0.0",
		"ts-loader": "^9.2.6",
		"ts-node": "^9.0.0",
		"typescript": "^4.5.2",
		"webpack": "^5.64.2",
		"webpack-cli": "^4.9.1",
		"webpack-node-externals": "^3.0.0"
	},
	"files": [
		"dist",
		"CHANGELOG.md",
		"LICENSE",
		"README.md"
	],
	"ava": {
		"failFast": true,
		"timeout": "60s",
		"typescript": {
			"rewritePaths": {
				"src/": "build/main/"
			}
		},
		"files": [
			"!build/module/**"
		]
	},
	"nyc": {
		"extends": "@istanbuljs/nyc-config-typescript",
		"exclude": [
			"**/*.spec.js"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"prettier": {
		"singleQuote": true,
		"printWidth": 120,
		"useTabs": true
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	}
}